<HTML>
<HEAD>

	<link rel='stylesheet' href='/global.css' />

</HEAD>

<BODY>
	<header>
        <span class="logo">SISTEMA RH</span>
        <span>Níveis de experiência</span>
    </header>
    
    <main>
    	<div class="exitButtonContainer">
    		<a href="/">
            	<button class="btn btn-red">Voltar</button>
        	</a>
    	</div>
        <div class="listHeader">
            <h1>Listagem de níveis de experiência</h1>
            <a href="/employees">
                <button class="btn btn-blue">Novo nível</button>
            </a>
        </div>
        #foreach($role in $allroles)
			<a href="/roles/$role.getId()" class="item">
				<div>
		 			<span>ID: $role.getId()</span>
            		<span>Nome: $role.getName()</span>
				</div> 
    		</a>
		#end
    </main>


</BODY>

</HTML>